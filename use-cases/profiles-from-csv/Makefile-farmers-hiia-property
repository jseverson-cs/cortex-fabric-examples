CONDA_ENV := farmers-hiia
IMPORT_FILES=import_files
SCHEMA := farmers-hiia/Property
PROFILE_TYPE := fi/Property
include Makefile
SCHEMA_DIR := ${MAKEFILE_DIR}/schemas/v2-${SCHEMA}
EVENTS_DIR := ${MAKEFILE_DIR}/events/v2-${SCHEMA}
DRIVE_ID := 12lCPaKogTJx9d5GMZsG7VGI_eu-idFIPEZLoNpOHwyI

# https://docs.google.com/spreadsheets/d/12lCPaKogTJx9d5GMZsG7VGI_eu-idFIPEZLoNpOHwyI/edit#gid=1168186011
import_files:
	python download-csv-from-google-sheets.py \
	  '${GOOGLE_AUTH_SECRET}' \
	  '${DRIVE_ID}' \
	  'property-schema!A1:L' > ${SCHEMA_DIR}/schema.csv
	python download-csv-from-google-sheets.py \
	  '${GOOGLE_AUTH_SECRET}' \
	  '${DRIVE_ID}' \
	  'taxonomy!A1:G' > ${SCHEMA_DIR}/taxonomy.csv
	python download-csv-from-google-sheets.py \
      '${GOOGLE_AUTH_SECRET}' \
      '${DRIVE_ID}' \
      'property-samples!A1:N' > ${EVENTS_DIR}/samples.csv
